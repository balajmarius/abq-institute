{
  "$schema": "https://biomejs.dev/schemas/1.6.4/schema.json",
  "files": {
    "include": ["src/**/*.tsx", "src/**/*.ts"],
    "ignore": ["src/gatsby-types.d.ts"]
  },
  "organizeImports": {
    "enabled": false
  },
  "vcs": {
    "enabled": true,
    "clientKind": "git"
  },
  "formatter": {
    "lineWidth": 120,
    "indentStyle": "space"
  },
  "linter": {
    "enabled": true,
    "rules": {
      "all": true,
      "style": {
        "useImportType": "off",
        "noDefaultExport": "off",
        "noImplicitBoolean": "off"
      },
      "a11y": {
        "useAltText": "warn",
        "noSvgWithoutTitle": "warn",
        "useKeyWithClickEvents": "off"
      }
    }
  }
}
